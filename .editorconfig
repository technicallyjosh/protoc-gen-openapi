# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.go]
indent_style = tab

[*.{yaml,yml}]
indent_size = 2
quote_type = single

[*.proto]
indent_size = 2

[*.md]
indent_size = 2
